# GitHub API Token (required)
GITHUB_TOKEN=your_github_token_here

# Replicate API Token (required for TTS)
REPLICATE_API_TOKEN=your_replicate_token_here

# LLM API Keys (choose one)
ANTHROPIC_API_KEY=your_anthropic_key_here
# OR
OPENAI_API_KEY=your_openai_key_here

# Discord Webhook (optional - for server notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url_here

# Google Drive API (optional - for file uploads)
GOOGLE_DRIVE_CREDENTIALS_PATH=/path/to/your/service-account-credentials.json
GOOGLE_DRIVE_FOLDER_ID=your_google_drive_folder_id_here